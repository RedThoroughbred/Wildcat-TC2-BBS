[Unit]
Description=Wildcat Mesh Telemetry Logger
After=multi-user.target network-online.target
Wants=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=10
User=seth
WorkingDirectory=/home/seth/Wildcat-TC2-BBS
ExecStart=/home/seth/Wildcat-TC2-BBS/venv/bin/python3 /home/seth/Wildcat-TC2-BBS/telemetry_logger.py

[Install]
WantedBy=multi-user.target
